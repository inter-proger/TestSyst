<% if logged_in? -%>
  <div id="user-bar-greeting">Вы вошли как <%= link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to "Выйти", logout_path, { :title => "Log out" }    %>)</div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP 'Не вошли', :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to "Вход",  login_path,  { :title => "Log in" } %> /
                               <%= link_to "Регистрация", signup_path, { :title => "Create an account" } %></div>
<% end -%>
