<%= content_for :head do %>
  
<style>  
	a {margin: 2px; position: relative; padding: 4px 0; cursor: pointer; float: left;  list-style: none;display: inline;}
	
</style>
<%end%>


<%= content_for :menu  do%>
<ul>
      <li><%=link_to 'Главная',:root%></li>
      <li>|&nbsp;Вторая</li>
      <li>|&nbsp;Третья</li>
      <li><%= render :partial =>"users/user_bar" %></li>
    </ul>
<% end %>
<h1>Конфигурации тестов</h1>

<table cellspacing="0" cellpadding="0">
  <tr>
    <th>Имя</th>
    <th>Тип конфигурации</th>
    <th>Количество вопросов 1</th>
    <th>Количество вопросов 2</th>
    <th>Количество вопросов 3</th>
    <th>Количество вопросов 4</th>
    <th>Количество вопросов 5</th>
    <th>Оценка 3 (%)</th>
    <th>Оценка 4 (%)</th>
    <th>Оценка 5 (%)</th>
    <th>Время тестирования</th>
    <th></th>
  
  </tr>

<% @tconfigurations.each do |tconfiguration| %>

  <tr >
    <td  id="<%=tconfiguration.id%>" onmouseover="setcolor('Red','<%=tconfiguration.id%>')"><%= tconfiguration.Name %></td>
    <td><%= tconfiguration.configuration_type.Name %></td>
    <td><%= tconfiguration.qT1Count %></td>
    <td><%= tconfiguration.qT2Count %></td>
    <td><%= tconfiguration.qT3Count %></td>
    <td><%= tconfiguration.qT4Count %></td>
    <td><%= tconfiguration.qT5Count %></td>
    <td><%= tconfiguration.degree3 %></td>
    <td><%= tconfiguration.degree4 %></td>
    <td><%= tconfiguration.degree5 %></td>
    <td><%= tconfiguration.TestTime.strftime('%H:%M:%S')  %></td>
    <td width="95px"><%= link_to tag("span",{:class=>"ui-icon ui-icon-document"}), tconfiguration,:class=>"ui-state-default ui-corner-all",:title=>"Показать" %>
   <%= link_to tag("span",{:class=>"ui-icon ui-icon-folder-open"}), edit_tconfiguration_path(tconfiguration),:class=>"ui-state-default ui-corner-all",:title=>"Редактировать" %>
    <%= link_to tag("span",{:class=>"ui-icon ui-icon-trash"}), tconfiguration, :confirm => 'Are you sure?', :method => :delete, :class=>"ui-state-default ui-corner-all",:title=>"Удалить"%></td>
  </tr>
<% end %>
</table>


<br />

<%= link_to 'Создать', new_tconfiguration_path,:class=>"actionbutton" %>
